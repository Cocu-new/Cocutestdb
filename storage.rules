rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This is necessary so that anyone can see the images in your app.
    match /{allPaths=**} {
      allow read;
      // Allow write access only to authenticated users.
      // This ensures that only logged-in users (like your admins or vendors) can upload files.
      allow write: if request.auth != null;
    }
  }
}
